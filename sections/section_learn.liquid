<style>
    #section_{{section.id}} .Container {
        padding: 0 25px;
        max-width: 1370px;
        margin: 0 auto;
    } 
    #section_{{section.id}} .SectionButton {
        margin-bottom: 15px;
    }
    #section_{{section.id}} .SectionButton a {
        color: #939191;
        font-family: "proxima-nova",sans-serif;
        font-size: 19.8px;
        letter-spacing: 0;
        line-height: 34.1px;
        border: 1.1px solid #939191;
        padding: 10px 15px;
        text-align: center;
        display: inline-block;
    } 

    #section_{{section.id}} .SectionText {
        max-width: 520px;
    }

    #section_{{section.id}} .FlexItem:first-child {
        padding-right: 30px;
    }

    #section_{{section.id}} .FlexItem:last-child {
        padding-left: 30px;
    }

    @media (max-width: 991px) {
        #section_{{section.id}} .FlexItem:first-child {
            padding-right: 0px;
        }

        #section_{{section.id}} .FlexItem:last-child {
            padding-left: 0px;
        }
    }

    @media (max-width: 767px) {
        #section_{{section.id}} .SectionButton a {
            font-size: 18px;
            letter-spacing: 0;
            line-height: 31px;
        }      

        #section_{{section.id}} .SectionText {
            max-width: 320px;
        }


    }

