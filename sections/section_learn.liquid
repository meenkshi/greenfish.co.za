    }

    #btn_learn2 {
        width: 230px;
    }

    #btn_learn3 {
        width: 270px;
    }
  */
</style>

<div class="section offset" id="section_{{section.id}}">  
    <div class="Container">
        <div class="FlexBox">
            <div class="FlexItem">
                {%- if section.settings.text != blank -%}
                <div class="SectionText">{{section.settings.text}}</div>
                {%- endif -%}
            </div>

            <div class="FlexItem">
                <h4 class="SectionSmallSubtitle">LEARN MORE</h4>

                {%- if section.settings.cta_link1 != blank -%}
                <div class="SectionButton">
                    <a href="{{section.settings.cta_link1}}" id="btn_learn1">{{section.settings.cta_label1}}&nbsp;&nbsp;&nbsp; <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{'button-arrow.svg' | file_url}}" /></a>
                </div>
                {%- endif -%}

                {%- if section.settings.cta_link2 != blank -%}
                <div class="SectionButton">
                    <a href="{{section.settings.cta_link2}}" id="btn_learn2">{{section.settings.cta_label2}}&nbsp;&nbsp;&nbsp; <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{'button-arrow.svg' | file_url}}" /></a>
                </div>
                {%- endif -%}

                {%- if section.settings.cta_link3 != blank -%}
                <div class="SectionButton">
                    <a href="{{section.settings.cta_link3}}" id="btn_learn3">{{section.settings.cta_label3}}&nbsp;&nbsp;&nbsp; <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{'button-arrow.svg' | file_url}}" /></a>
                </div>
                {%- endif -%}

            </div>
        </div>
    </div>
</div>

